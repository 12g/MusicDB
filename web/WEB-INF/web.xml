<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Servlet_Redireccion</servlet-name>
        <servlet-class>servlets.Redireccionamientos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_confirmarEliminacion</servlet-name>
        <servlet-class>servlets.ConfirmarEliminacionArtista</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JSP_listarArtistas</servlet-name>
        <jsp-file>listartist.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>JSP_verArtista</servlet-name>
        <jsp-file>infoartist.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>JSP_crearArtista</servlet-name>
        <jsp-file>newartist.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>JSP_buscarArtista</servlet-name>
        <jsp-file>searchartist.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>JSP_borrarArtista</servlet-name>
        <jsp-file>deleteartist.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>JSP_listarArtistas</servlet-name>
        <url-pattern>/jsp/artista/todos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JSP_crearArtista</servlet-name>
        <url-pattern>/jsp/artista/crear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JSP_buscarArtista</servlet-name>
        <url-pattern>/jsp/artista/buscar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JSP_borrarArtista</servlet-name>
        <url-pattern>/jsp/artista/borrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JSP_verArtista</servlet-name>
        <url-pattern>/jsp/artista/ver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_confirmarEliminacion</servlet-name>
        <url-pattern>/artista/borrar/si</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_Redireccion</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/artista/borrar/no</url-pattern>
        <url-pattern>/login/confirmar</url-pattern>
        <url-pattern>/artista/buscar</url-pattern>
        <url-pattern>/artista/borrar</url-pattern>
        <url-pattern>/artista/crear</url-pattern>
        <url-pattern>/artista/ver</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <absolute-ordering/>
</web-app>
